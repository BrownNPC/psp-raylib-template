# Fragment 1: Global flags (applies to all files)
CompileFlags:
  CompilationDatabase: ./build
  Add:
    - "--sysroot=$PSPDEV/psp"

---

# For C files only
If:
  PathMatch: ".*\\.(c|h)$"
CompileFlags:
  Add:
    - "-std=c23"

---

# For C++ files only
If:
  PathMatch: ".*\\.(cpp|hpp)$"
CompileFlags:
  Add:
    - "-std=c++23"
